 <h1><%= @posts.title %></h1>

 <div class="row">
   <div class="col-md-8">
     <p><%= @posts.body %></p>
   </div>
   <div class="col-md-4">
     <%= link_to "Edit", edit_post_path(@posts), class: 'btn btn-success'%>
     <%= link_to "Delete Post", @posts, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete such post?'}%>
     
   </div>
 </div>
