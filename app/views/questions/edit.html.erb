<h1>Edit Question</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for questions</p>
    <h3>Don't ask dumb questions</h3>
  </div>
  <div class="col-md-8">
    <%= form_for @questions do |que| %>
      <div class="form-group">
        <%= que.text_field :title, class: 'form-control', placeholder: "Submit yer question!"%>
        <%= que.text_field :body, class: 'form-control', placeholder: "Submit yer question!"%>
        Mark as resolved? <%= que.check_box :resolved%>
      </div>
      <div class="form-group">
        <%= que.submit "Save", class: 'btn btnsuccess' %>
      </div>
    <% end %>
  </div>
</div>
