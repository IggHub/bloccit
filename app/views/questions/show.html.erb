<p><%= @questions.title %></p>

<div class="row">
  <div class="col-md-8">
    <p><%= @questions.body %></p>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_question_path(@questions), class: 'btn btn-success'%>
    <%= link_to "Delete Question", @questions, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete such question?'}%>
  </div>
</div>
